@model TestimonialAddVM
@{
    ViewData["Title"] = "AddTestimonial";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Testimonial" asp-action="GetTestimonialList">Testimonials</a></li>
        <li class="breadcrumb-item active">Add Testimonial</li>
    </ol>
</nav>


<div class="card">
    <div class="card-body mt-3">

        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="Testimonial" asp-action="AddTestimonial" class="row g-3" method="post">
            <input type="hidden" asp-for="FileName" value="test" /> @* Delete this later when add photo functionallity *@
            <input type="hidden" asp-for="FileType" value="test" /> @* Delete this later when add photo functionallity *@

            <div class="col-md-12">
                <div class="form-floating">
                    <textarea asp-for="Comment" type="text" class="form-control" placeholder="Comment"></textarea>
                    <label asp-for="Comment">Comment</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="FullName" type="text" class="form-control" placeholder="Full Name">
                    <label asp-for="FullName">Full Name</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-floating">
                    <input asp-for="Title" type="text" class="form-control" placeholder="Title">
                    <label asp-for="Title">Title</label>
                </div>
            </div>

            <!-- Photo -->
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Photo" type="file" accept="image/*" class="form-control" placeholder="Photo">
                    <label asp-for="Photo">Photo</label>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>

        </form><!-- End floating Labels Form -->

    </div>
</div>
