@model ServiceUpdateVM
@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Service" asp-action="GetServiceList">Services</a></li>
        <li class="breadcrumb-item active">Update Service</li>
    </ol>
</nav>


<div class="card">
    <div class="card-body mt-3">

        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="Service" asp-action="UpdateService" class="row g-3" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Name">
                    <label asp-for="Name">Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <textarea asp-for="Description" type="text" class="form-control" placeholder="Description"></textarea>
                    <label asp-for="Description">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            @* Change later becuase it supposed to show some kind of pop up with emogies *@
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Icon" type="text" class="form-control" placeholder="Icon">
                    <label asp-for="Icon">Icon</label>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>

        </form><!-- End floating Labels Form -->

    </div>
</div>
