@model HomePageUpdateVM
@{
    ViewData["Title"] = "UpdateHomePage";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="HomePage" asp-action="GetHomePageList">Home Pages</a></li>
        <li class="breadcrumb-item active">Update Home Page</li>
    </ol>
</nav>


<div class="card">
    <div class="card-body mt-3">

        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="HomePage" asp-action="UpdateHomePage" class="row g-3" method="post">

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Header" type="text" class="form-control" placeholder="Header">
                    <label asp-for="Header">Header</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Description" type="text" class="form-control" placeholder="Description">
                    <label asp-for="Description">Description</label>
                </div>
            </div>
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="VideoLink" type="text" class="form-control" placeholder="VideoLink">
                    <label asp-for="VideoLink">VideoLink</label>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>

        </form><!-- End floating Labels Form -->

    </div>
</div>

