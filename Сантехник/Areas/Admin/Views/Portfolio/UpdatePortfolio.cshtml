@model PortfolioUpdateVM
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Portfolio" asp-action="GetPortfolioList">Portfolios</a></li>
        <li class="breadcrumb-item active">Update Contact</li>
    </ol>
</nav>

<div class="card">
    <img src="~/NiceAdmin/assets/img/card.jpg" class="card-img-top" style="width:300px" alt="..." />
</div>

<div class="card">
    <div class="card-body mt-3">

        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="Portfolio" asp-action="UpdatePortfolio" class="row g-3" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="RowVersion" />
            
            <input type="hidden" asp-for="FileName" value="test" /> @* Delete this later when add photo functionallity *@
            <input type="hidden" asp-for="FileType" value="test" /> @* Delete this later when add photo functionallity *@

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Title" type="text" class="form-control" placeholder="Title">
                    <label asp-for="Title">Location</label>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Category.Name" type="text" class="form-control" placeholder="Category Name">
                    <label asp-for="Category.Name">Category Name</label>
                </div>
            </div>

            <!-- Photo -->
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Photo" type="file" accept="image/*" class="form-control" placeholder="Photo">
                    <label asp-for="Photo">Photo</label>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>

        </form><!-- End floating Labels Form -->

    </div>
</div>

