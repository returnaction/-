@model PortfolioAddVM
@{
    ViewData["Title"] = "AddPortfolio";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<nav>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Portfolio" asp-action="GetPortfolioList">Portfolios</a></li>
        <li class="breadcrumb-item active">Add Contact</li>
    </ol>
</nav>


<div class="card">
    <div class="card-body mt-3">

        <!-- Floating Labels Form -->
        <form asp-area="Admin" asp-controller="Portfolio" asp-action="AddPortfolio" class="row g-3" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Title" type="text" class="form-control" placeholder="Title">
                    <label asp-for="Title">table</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Category.Name" type="text" class="form-control" placeholder="Category Name">
                    <label asp-for="Category.Name">Category Name</label>
                    <span asp-validation-for="Category.Name" class="text-danger"></span>
                </div>
            </div>
            
            <!-- Photo -->
            <div class="col-md-12">
                <div class="form-floating">
                    <input asp-for="Photo" type="file" accept="image/*" class="form-control" placeholder="Photo">
                    <label asp-for="Photo">Photo</label>
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>

        </form><!-- End floating Labels Form -->

    </div>
</div>
